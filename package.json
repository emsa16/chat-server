{
  "name": "chat-server",
  "version": "2.0.0",
  "description": "WebSocket + Express chat server",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm run htmlhint && npm run stylelint && npm run eslint",
    "test": "jest --coverage",
    "start": "node server.js",
    "production": "NODE_ENV='production' node server.js",
    "clean": "rm -rf node_modules package-lock.json",
    "htmlhint": "[ ! -f .htmlhintrc ] || htmlhint --ignore build/**,node_modules/**,coverage/** | grep -v 'Config loaded:'",
    "stylelint": "[ ! -f .stylelintrc.json ] || stylelint **/*.css",
    "eslint": "[ ! -f .eslintrc.json ] || eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emsa16/chat-server.git"
  },
  "author": "Emil Sandberg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emsa16/chat-server/issues"
  },
  "homepage": "https://github.com/emsa16/chat-server#readme",
  "dependencies": {
    "express": "^4.16.4",
    "ws": "^6.1.4"
  },
  "devDependencies": {
    "mock-socket": "^8.0.5",
    "eslint": "^5.12.1",
    "htmlhint": "^0.10.1",
    "stylelint": "^9.10.1",
    "jest": "^24.1.0"
  }
}
